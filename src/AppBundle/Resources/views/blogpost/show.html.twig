{% extends 'base.html.twig' %}

{% block body %}
    <h1>Blogpost</h1>

    <table class="table tables-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ blogPost.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ blogPost.title }}</td>
            </tr>
            <tr>
                <th>Body</th>
                <td>{{ blogPost.body }}</td>
            </tr>
            <tr>
                <th>Ispublished</th>
                <td>{{ blogPost.isPublished }}</td>
            </tr>
        </tbody>
    </table>

    <div>
        <a class="btn btn-primary" href="{{ path('blogpost_index') }}">Back to the list</a>
        <a class="btn btn-primary" href="{{ path('blogpost_edit', { 'id': blogPost.id }) }}">Edit</a>
    </div>

    <p>
        {{ form_start(delete_form) }}
            <input class="btn btn-danger" type="submit" value="Delete">
        {{ form_end(delete_form) }}
    </p>

{% endblock %}
